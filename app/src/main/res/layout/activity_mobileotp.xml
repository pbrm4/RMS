<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kjsce.rms.mobileotp">

    <EditText
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/putotp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="106dp"
        android:hint="Mobile number" />

    <EditText
        android:id="@+id/putotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mobile"
        android:layout_marginStart="38dp"
        android:layout_marginTop="52dp"
        android:hint="Please enter OTP" />

    <Button
        android:id="@+id/checkotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/putotp"
        android:layout_marginEnd="52dp"
        android:text="Verify OTP" />


    <Button
        android:id="@+id/otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mobile"
        android:layout_alignStart="@+id/checkotp"
        android:text="Get OTP" />
</RelativeLayout>
