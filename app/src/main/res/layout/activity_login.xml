<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kjsce.rms.login"
    android:background="@drawable/login_bg">


    <Button
        android:id="@+id/log_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="84dp"
        android:background="@drawable/login_btn" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        app:srcCompat="@drawable/login_fileds"
        android:layout_above="@+id/log_log"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/log_phone"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_alignStart="@+id/log_pwd"
        android:layout_alignTop="@+id/imageView"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/log_pwd"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:allowUndo="true"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="  Password"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/login_info" />

    <TextView
        android:id="@+id/login_status"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/log_pwd"
        android:text="" />

</RelativeLayout>